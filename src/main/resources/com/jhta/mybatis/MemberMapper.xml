<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.mybatis.MemberMapper">
	<insert id="insert" parameterType="member">
		insert into member values(seq_m_num.nextval,#{id},#{pwd},#{name},sysdate,#{money},sysdate,#{star_candy},#{gender_num},#{grade_num})
	</insert>
	<update id="update" parameterType="member">
		update member set id=#{id},pwd=#{pwd},name=#{name} where m_num=#{m_num}
	</update>
	<select id="getInfo" parameterType="string" resultType="member">
		select * from member where id=#{id}
	</select>
	<select id="getList" resultType="member">
		select * from member
	</select>
	<update id="moneyUpdate" parameterType="member">
		update member set money=#{money} where m_num=#{m_num}
	</update>
	<update id="gradeUpdate" parameterType="member">
		update member set grade_num=#{grade_num} where m_num=#{m_num}
	</update>
	<update id="limitUpdate" parameterType="member">
		update member set limit_date=sysdate+10 where m_num=#{m_num} 
	</update>
	<update id="starcandyUpdate" parameterType="member">
		update member set star_candy=#{star_candy} where m_num=#{m_num}
	</update>
</mapper>