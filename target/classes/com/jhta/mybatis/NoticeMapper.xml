<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.mybatis.NoticeMapper">
	<insert id="insert" parameterType="notice">
		insert into notice values(seq_n_num.nextval,#{n_title},#{n_content},TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI'),#{a_num})
	</insert>
	<select id="getInfo" parameterType="int" resultType="notice">
		select * from notice where n_num=#{n_num}
	</select>
	<select id="getList" resultType="notice">
		select * from notice
	</select>
	<select id="getCount" resultType="int">
		select NVL(count(n_num),0) cnt from notice
	</select>
</mapper>