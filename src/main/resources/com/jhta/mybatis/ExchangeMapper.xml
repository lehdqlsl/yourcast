<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.mybatis.ExchangeMapper">
	<insert id="insert" parameterType="exchange">
		insert into exchange values (seq_e_num.nextval,#{e_count},#{e_ea},sysdate,#{m_num})
	</insert>
	
	<select id="getcount" parameterType="int" resultType="int">
		select NVL(count(*),0) from exchange where m_num = #{m_num}
	</select>
	
	<select id="getlist" resultType="exchange" parameterType="int">
		select * from exchange where m_num = #{m_num}
	</select>
</mapper>