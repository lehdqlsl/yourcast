<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.mybatis.BoardReplyMapper">
	<insert id="insert" parameterType="boardreply">
		insert into board_reply values(seq_br_num.nextval,#{br_content},sysdate,0,#{b_num},#{m_num})
	</insert>
	<update id="delete" parameterType="int">
		update board_reply set br_delete=1 where br_num=#{br_num}
	</update>
	<update id="update" parameterType="boardreply">
		update board_reply set br_content=#{br_content},br_regdate=sysdate where br_num=#{br_num}
	</update>
	<select id="getInfo" parameterType="int" resultType="boardreply">
		select * from board_reply where br_num=#{br_num}
	</select>
	<select id="getList" parameterType="int" resultType="boardreply">
		select * from board_reply where b_num=#{b_num} and br_delete=0
	</select>
</mapper>